{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-undef": "warn",
    "no-unused-vars": "warn",
    "no-constant-condition": "warn",
    "keyword-spacing": [
      2,
      {
        "before": true,
        "after": true
      }
    ],
    "brace-style": "error",
    "comma-spacing": "error",
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1
      }
    ],
    "comma-dangle": [2, "never"],
    "key-spacing": [
      2,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ]
  }
}
